{
    "source": {
        "include": [
            "./README.md",
            "./scripts/"
        ],
        "exclude": [],
        "includePattern": ".+\\.js(doc)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },

    "opts": {
        "destination": "./docs/",
        "encoding"   : "utf8",
        "lenient"    : true,
        "private"    : false,
        "recurse"    : true,
        "template"   : "./node_modules/jaguarjs-jsdoc/"
    },

    "tags": {
        "allowUnknownTags": true
    },

    "plugins": [
        "plugins/markdown"
    ],

    "templates": {
        "applicationName": "pascal.js",
        "disqus": "",
        "googleAnalytics": "",
        "openGraph": {
            "title": "",
            "type": "website",
            "image": "",
            "site_name": "",
            "url": ""
        },
        "meta": {
            "title": "",
            "description": "",
            "keyword": ""
        },
        "linenums": true
    },

    "markdown": {
        "parser"  : "gfm",
        "hardwrap": true
    }
}
